{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
<div class="example-wrapper">
    <h1>Inscription</h1>
        {{ form_start(inscriptionForm) }}
        {{ form_row(inscriptionForm.email) }}
        {{ form_row(inscriptionForm.password, {
            label: 'Mot de passe'
        }) }}
        {{ form_row(inscriptionForm.name) }}
        {{ form_row(inscriptionForm.firstname) }}
        {{ form_row(inscriptionForm.reason) }}
        {{ form_row(inscriptionForm.birth_date) }}
        {{ form_row(inscriptionForm.type) }}

        <button type="submit" class="btn">S'inscrire</button>
        {{ form_end(inscriptionForm) }}
</div>
{% endblock %}